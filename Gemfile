
source 'http://rubygems.org'

# for talking to the device
gem 'serialport'

group :development do
	# markdown support for yard
  gem 'redcarpet'
	# documentation
  gem 'yard'
end

group :test, :development do
  gem 'rake'
end

group :test do
  # testing framework
  gem 'rspec'
	# coverage report
  gem 'simplecov', '0.5.4', :require => false
end

